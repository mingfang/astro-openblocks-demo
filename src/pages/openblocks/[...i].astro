---
import Layout from '../../layouts/Layout.astro';
import 'openblocks-sdk/dist/style.css';
import { OpenblocksAppView } from 'openblocks-sdk';

const demos = [
{
    title: "basic crud",
    appId: "6374b8dbc23a1103804cc23e",
},
{
    title: "Simple table horizontal scroll and pagination demo",
    appId: "6377695dc54c5224c70e9770",
},
{
    title: "Pagination with temporary state demo",
    appId: "6379cdd9f02c6e6ecc1d37ff",
},
{
    title: "Import third-party JS lib demo",
    appId: "637a1797c54c5224c70efed3",
},
{
    title: "JSON schema parsing",
    appId: "638dc95c75cfb658566143c5",
},
{
    title: "Custom Echarts demo",
    appId: "63779dd6c54c5224c70ea537",
},
{
    title: "Shopping cart demo",
    appId: "63a422a344075b798fe3ae06",
},
];

const { i=0 } = Astro.params;
const demo = demos[i]
---
<Layout title={demo.title}>
    <nav>
        {demos.map((item, i) => (
        <button type='button' onclick=`location.href='/openblocks/${i}'` style={{margin:'6px'}}>
            {item.title}
        </button>
        ))}
    </nav>
    <main>
        <OpenblocksAppView appId={demo.appId} client:only/>
    </main>
</Layout>